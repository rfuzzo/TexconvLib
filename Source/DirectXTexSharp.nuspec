<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2013/05/nuspec.xsd">
  <metadata minClientVersion="2.5">
    <id>DirectXTexSharp</id>
    <version>$version$</version>
    <authors>Moritz Baron</authors>
    <license type="expression">MIT</license>
    <licenseUrl>https://licenses.nuget.org/MIT</licenseUrl>
    <projectUrl>https://github.com/rfuzzo/DirectXTexSharp</projectUrl>
    <description>A .NET wrapper for DirectXTex</description>
    <repository type="git" url="https://github.com/rfuzzo/DirectXTexSharp" />
    <tags>Native, native</tags>
  </metadata>

  <files>
    <!-- Include everything in \build -->
    <file src="build\**" target="build" />

    <file src="bin\x64\$CConfiguration$\*.dll" target="runtimes\win-x64\native" />
    <!--file src="bin\x64\$CConfiguration$\Ijwhost.dll" target="runtimes\win-x64\native" /-->

    <file src="bin\win32\$CConfiguration$\*.dll" target="runtimes\win-x86\native" />
    <!--file src="bin\win32\$CConfiguration$\Ijwhost.dll" target="runtimes\win-x86\native" /-->
  </files>

</package>